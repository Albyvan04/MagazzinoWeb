{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "pathMappings": {
                "C:\\xampp\\htdocs": "${workspaceRoot}"
            },
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "runtimeExecutable": "C:\\xampp\\php\\php.exe"
        }
    ]
} 